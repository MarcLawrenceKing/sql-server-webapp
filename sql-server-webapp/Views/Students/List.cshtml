
@{
	ViewData["Title"] = "List";
}

@model List<sql_server_webapp.Models.Entities.Student>

<h1>Students</h1>
<a class="btn btn-primary" asp-controller="Students" asp-action="Add">Add</a>

<table class="table">
	<thead>
		<tr>
			<th> ID</th>
			<th> Name</th>
			<th> Email</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var student in Model)
		{
			<tr>
				<td>@student.Id</td>
				<td>@student.Name</td>
				<td>@student.Email</td>
				<td>
					<a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
					</td>
			</tr>
		}
	</tbody>
</table>
